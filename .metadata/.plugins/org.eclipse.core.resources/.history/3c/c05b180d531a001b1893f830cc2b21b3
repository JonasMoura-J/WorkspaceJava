package entities;

public class Product {
	public String Name;
	public double Price;
	public int Quantity;
	
	public double totalValueInStrock() {
		return Price * Quantity;
	}
	
	public void addProducts(int quantity) {
		this.Quantity += quantity;   //this é a auto referência para o obj(explicitando o acesso ao paramêtro)s
	}
	
	public void removeProducts(int quantity) {
		this.Quantity -= quantity;
		
	}
	
	public String toString() {
		return ("%s, %f, %d, units, total: R$ %.2f",Name , Price, Quantity, Quantity );
	}
}
